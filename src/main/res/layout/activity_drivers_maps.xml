<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    tools:context=".DriversMapsActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="661dp"
        android:layout_alignParentStart="false"
        android:layout_marginStart="-6dp"
        />
</RelativeLayout>

    <Button
        android:id="@+id/driver_logout"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="false"
        android:layout_marginStart="280dp"
        android:layout_marginBottom="6dp"
        android:text="Log out"
        android:textAlignment="center"
        tools:layout_editor_absoluteY="437dp" />

    <Button
        android:id="@+id/driver_accelerometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="false"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="6dp"
        android:text="Accelerometer"
        android:textAlignment="textStart"
        tools:layout_editor_absoluteY="437dp" />

    <Button
        android:id="@+id/driver_settings"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="false"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="6dp"
        android:text="Settings"
        android:textAlignment="center"
        tools:layout_editor_absoluteY="437dp" />

    <RelativeLayout
        android:id="@+id/rell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="-658dp"
        android:background="@color/colorPrimaryDark"
        android:visibility="invisible">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/customer_profle_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/profile"
            android:text="Settings"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/customer_profle_image"
            android:text="Customer name"
            android:textSize="16dp"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>


        <ImageView
            android:id="@+id/phone_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/phone"
            android:tint="@android:color/black"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</RelativeLayout>
