<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".CustomerLoginRegisterActivity">

    <Button
        android:id="@+id/customer_login_button"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="164dp"
        android:layout_marginBottom="169dp"
        android:text="Login"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="437dp" />

    <Button
        android:id="@+id/customer_register_button"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="164dp"
        android:layout_marginBottom="172dp"
        android:text="Register"
        android:textAlignment="center"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteY="437dp" />

    <Button
        android:id="@+id/register_customer_link"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="125dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="Don't have an account?"
        android:textAlignment="textStart"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="488dp" />

    <TextView
        android:id="@+id/driver_status"
        android:layout_width="213dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="123dp"
        android:layout_marginTop="252dp"
        android:text="Customer login"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="257dp" />

    <EditText
        android:id="@+id/customer_email"
        android:layout_width="260dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="305dp"
        android:ems="10"
        android:hint="Email..."
        android:inputType="textEmailAddress"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="88dp" />

    <EditText
        android:id="@+id/customer_password"
        android:layout_width="260dp"
        android:layout_height="64dp"
        android:layout_alignEnd="@+id/driver_status"
        android:layout_alignParentTop="true"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="-2dp"
        android:ems="10"
        android:hint="Password.."
        android:inputType="textPassword"
        android:textAlignment="textStart"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="378dp" />
</RelativeLayout>